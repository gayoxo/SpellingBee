# Archivo de palabras
WORDS_FILE=words.txt

# Rondas por defecto
ROUNDS_DEFAULT=10

# ===============================
# MODO EXAMEN
# ===============================
EXAM_MODE=true

# Pronunciar palabra al iniciar ronda
SPEAK_WORD_ON_NEW_ROUND=true

# ===============================
# AUTO-ESCUCHA (sin botón)
# ===============================
# Ventana total de escucha tras pronunciar la palabra (segundos)
AUTO_LISTEN_WINDOW=30

# Cada “trozo” de escucha (segundos). Se repite en bucle hasta AUTO_LISTEN_WINDOW.
AUTO_LISTEN_CHUNK=4

# Ajuste de ruido ambiente (sube si el aula es ruidosa)
AMBIENT_DURATION=0.8

# ===============================
# SCORING
# ===============================
SCORING_MODE=position
PENALIZE_EXTRA=true

# Si no se detecta deletreo válido, ¿cuenta como 0% y pasa?
NO_ATTEMPT_COUNTS_AS_ROUND=true

# ===============================
# INTERFAZ
# ===============================
WINDOW_WIDTH=760
WINDOW_HEIGHT=700
SHOW_DETAILS=true

# ===============================
# TTS OFFLINE
# ===============================
TTS_RATE=70
TTS_VOLUME=1.0
TTS_VOICE_HINT=en
