# ===============================
# Spelling Bee - Configuración
# ===============================

# Archivo de palabras (una por línea)
WORDS_FILE=words.txt

# Rondas por defecto
ROUNDS_DEFAULT=10

# -------------------------------
# MODO EXAMEN
# -------------------------------
# true  -> NO se muestra la palabra; se pronuncia por audio (TTS)
# false -> se muestra la palabra en pantalla
EXAM_MODE=true

# Pronunciar la palabra al iniciar cada ronda
SPEAK_WORD_ON_NEW_ROUND=true

# -------------------------------
# AUDIO (Speech-to-Text)
# -------------------------------
# Segundos máximos para escuchar el deletreo
LISTEN_TIME_LIMIT=6

# Ajuste de ruido ambiente (sube en aula ruidosa)
AMBIENT_DURATION=0.6

# -------------------------------
# SCORING
# -------------------------------
# (actual) position
SCORING_MODE=position

# true: penaliza letras extra (denominador = max(len(target), len(guess)))
# false: no penaliza extra (denominador = len(target))
PENALIZE_EXTRA=true

# -------------------------------
# UI
# -------------------------------
WINDOW_WIDTH=760
WINDOW_HEIGHT=520
SHOW_DETAILS=true

# -------------------------------
# TTS (Text-to-Speech) offline
# -------------------------------
# Velocidad (más bajo = más lento)
TTS_RATE=80

# Volumen (0.0 a 1.0)
TTS_VOLUME=1.0

# Pista para elegir voz inglesa (si existe)
# Prueba: en | english | en-us
TTS_VOICE_HINT=en
