# ===============================
# Spelling Bee - Configuración
# ===============================

# Archivo de palabras (una por línea)
WORDS_FILE=words.txt

# Rondas por defecto
ROUNDS_DEFAULT=10

# ===============================
# MODO EXAMEN
# ===============================
# true  -> NO se muestra la palabra, se pronuncia
# false -> se muestra en pantalla
EXAM_MODE=true

# Pronunciar palabra al iniciar cada ronda
SPEAK_WORD_ON_NEW_ROUND=true

# ===============================
# AUTO-ESCUCHA (sin botón)
# ===============================
# Ventana total de escucha tras pronunciar la palabra (segundos)
AUTO_LISTEN_WINDOW=45

# Duración de cada trozo de escucha (segundos)
AUTO_LISTEN_CHUNK=6

# -------------------------------
# ¿Qué es un "intento válido"?
# -------------------------------
# mínimo absoluto de letras detectadas
MIN_LETTERS_VALID=2

# mínimo relativo respecto a la longitud de la palabra (0.0 desactiva)
# para palabras largas suele ir bien 0.30 - 0.45
MIN_RELATIVE_VALID=0.35

# tope máximo de letras exigidas por el mínimo relativo (evita pedir demasiadas en palabras muy largas)
# ej: si palabra=20 y MIN_RELATIVE_VALID=0.35 => 7, pero si saliera 12, se limita aquí
MAX_RELATIVE_REQUIRED=8

# Ajuste de ruido ambiente (sube en aulas ruidosas)
AMBIENT_DURATION=1.0

# ===============================
# SCORING
# ===============================
# position -> comparación por índice (simple, pero falla con desplazamientos)
# edit     -> alineamiento dinámico (recomendado)
SCORING_MODE=edit

# Penalizar letras extra en modo position (en edit no aplica igual)
PENALIZE_EXTRA=true

# Si no hay intento válido en la ventana, ¿cuenta como ronda con 0%?
NO_ATTEMPT_COUNTS_AS_ROUND=true

# ===============================
# UI
# ===============================
WINDOW_WIDTH=760
WINDOW_HEIGHT=520

# Mostrar tabla detalle del alineamiento
SHOW_DETAILS=true

# ===============================
# TTS OFFLINE
# ===============================
# Velocidad (más bajo = más lento)
TTS_RATE=80

# Volumen (0.0 a 1.0)
TTS_VOLUME=1.0

# Pista para seleccionar voz en inglés (si existe)
TTS_VOICE_HINT=en
