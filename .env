# ===============================
# Spelling Bee - Configuración
# ===============================

WORDS_FILE=words.txt
ROUNDS_DEFAULT=10

# Modo examen (la palabra NO se muestra, se pronuncia)
EXAM_MODE=true
SPEAK_WORD_ON_NEW_ROUND=true

# ===============================
# AUTO-ESCUCHA (sin botón)
# ===============================
AUTO_LISTEN_WINDOW=45
AUTO_LISTEN_CHUNK=6

# Requisito mínimo de intento válido
MIN_LETTERS_VALID=2

# Para palabras largas baja este valor:
# 0.35 => pide 35% de la longitud de la palabra
# 0.0  => desactiva el umbral relativo
MIN_RELATIVE_VALID=0.35

# Ajuste de ruido ambiente
AMBIENT_DURATION=1.0

# ===============================
# SCORING
# ===============================
SCORING_MODE=position
PENALIZE_EXTRA=true
NO_ATTEMPT_COUNTS_AS_ROUND=true

# ===============================
# UI
# ===============================
WINDOW_WIDTH=760
WINDOW_HEIGHT=700
SHOW_DETAILS=true

# ===============================
# TTS OFFLINE
# ===============================
TTS_RATE=80
TTS_VOLUME=1.0
TTS_VOICE_HINT=en
