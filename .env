# Archivo de palabras
WORDS_FILE=words.txt

# Rondas por defecto
ROUNDS_DEFAULT=10

# Modo examen: no muestra palabra, la pronuncia
EXAM_MODE=true
SPEAK_WORD_ON_NEW_ROUND=true

# ===============================
# AUTO-ESCUCHA (sin botón)
# ===============================
# Ventana total de escucha tras pronunciar la palabra (segundos)
AUTO_LISTEN_WINDOW=30

# Cada “trozo” de escucha (segundos). Se repite en bucle hasta AUTO_LISTEN_WINDOW.
AUTO_LISTEN_CHUNK=4

# Requisito de "intento válido"
MIN_LETTERS_VALID=2

# Umbral relativo (0.0 a 1.0) para considerar válido:
# ejemplo 0.6 => requiere al menos 60% de la longitud de la palabra.
# pon 0.0 para desactivar
MIN_RELATIVE_VALID=0.6

# Ruido ambiente
AMBIENT_DURATION=0.8

# Scoring
SCORING_MODE=position
PENALIZE_EXTRA=true
NO_ATTEMPT_COUNTS_AS_ROUND=true

# UI
WINDOW_WIDTH=760
WINDOW_HEIGHT=520
SHOW_DETAILS=true

# TTS
TTS_RATE=80
TTS_VOLUME=1.0
TTS_VOICE_HINT=en
